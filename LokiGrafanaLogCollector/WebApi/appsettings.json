{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "template": "[{timestamp:HH:mm:ss} {level:u3}{#if traceId is not null} ({traceId.Substring(0,4)}:{spanId.Substring(0,4)}){#end}] {message:lj}{newLine}{exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "WebApi"
            }               
          ],
          "propertiesAsLabels": [
            "app","Environment","Version"
          ]
        }
      }
    ]    
  }
}
